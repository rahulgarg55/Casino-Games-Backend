{
    "compilerOptions": {
      "target": "ES6",
      "module": "commonjs",
      "strict": false,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "./dist",
      "rootDir": "./src"
    },
    "include": ["src/**/*"],
    "exclude": [
      "node_modules",
      "**/*.spec.ts",
      "src/controllers/__tests__",
      "src/utils/__tests__",
      "src/middlewares/__tests__",
      "src/services/__tests__"
    ]
  }